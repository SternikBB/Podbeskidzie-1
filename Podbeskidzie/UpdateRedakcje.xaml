<Page x:Class="Podbeskidzie.UpdateRedakcje"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Podbeskidzie"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="525"
      Title="UpdateRedakcje">
    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"  CornerRadius="15" Background="#f55449" BorderThickness="1" Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#f66055" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#f66055" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Width" Value="235" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="8 5 8 5"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="2" Opacity="0.6" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Rectangle">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect 
                        ShadowDepth="3"
                        Direction="330"
                        Color="Black"
                        Opacity="0.2"
                        BlurRadius="4">
                    </DropShadowEffect>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Page.Background>
        <SolidColorBrush Color="#000" Opacity="0.5"></SolidColorBrush>
    </Page.Background>
    <Grid
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Width="475" 
        Height="350"
        Margin="0 26 0 0">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" 
               Grid.Row="0"
               FontSize="18"
               Content="ID Redakcji:" 
               FontWeight="Bold"/>
        <Label Grid.Column="0" 
               Grid.Row="1"
               FontSize="18"
               Content="Nazwa" />
        <Label Grid.Column="0" 
               Grid.Row="2"
               FontSize="18"
               Content="Telefon" />
        <Label Grid.Column="0" 
               Grid.Row="3"
               FontSize="18"
               Content="Email" />
        <Label Grid.Column="0" 
               Grid.Row="4"
               FontSize="18"
               Content="Strona internetowa" />
        <Rectangle Fill="White" Grid.Column="1" RadiusY="4" RadiusX="4" Margin="0 4 100 4"/>
        <Rectangle Fill="White" Grid.Column="1" Grid.Row="1" RadiusY="4" RadiusX="4" Margin="0 4 0 4"/>
        <Rectangle Fill="White" Grid.Column="1" Grid.Row="2" RadiusY="4" RadiusX="4" Margin="0 4 0 4"/>
        <Rectangle Fill="White" Grid.Column="1" Grid.Row="3" RadiusY="4" RadiusX="4" Margin="0 4 0 4"/>
        <Rectangle Fill="White" Grid.Column="1" Grid.Row="4" RadiusY="4" RadiusX="4" Margin="0 4 0 4"/>
        <TextBox x:Name="tB0"
                 Grid.Column="1"
                 Grid.Row="0"
                 FontSize="18"
                 Margin="8 5 108 5"
                 Padding="2"
                 TextChanged="tB0_TextChanged"
                 KeyDown="tB0_KeyDown"
                 />
        <Button x:Name="btn1"
                Style="{DynamicResource RoundedButtonStyle}"
                Content="Pokaż"
                FontSize="16"
                Grid.Column="1"
                Grid.Row="0"
                HorizontalAlignment="Right" 
                Width="96"
                Margin="2 2 0 2"
                Click="btn1_Click">
            <Button.Effect>
                <DropShadowEffect
                     ShadowDepth="4"
                     Direction="330"
                     Color="Black"
                     Opacity="0.2"
                     BlurRadius="4"/>
            </Button.Effect>
        </Button>
        <TextBox x:Name="tB1" 
                 IsEnabled="False"
                 Grid.Column="1"
                 Grid.Row="1"
                 FontSize="18" 
                 Padding="2"/>
        <TextBox x:Name="tB2" 
                 IsEnabled="False"
                 Grid.Column="1"
                 Grid.Row="2"
                 FontSize="18"
                 Padding="2"/>
        <TextBox x:Name="tB3" 
                 IsEnabled="False"
                 Grid.Column="1"
                 Grid.Row="3"
                 FontSize="18"
                 Padding="2"/>
        <TextBox x:Name="tB4" 
                 IsEnabled="False"
                 Grid.Column="1"
                 Grid.Row="4"
                 FontSize="18"
                 Padding="2"/>
        <Button x:Name="btn2"
                Style="{DynamicResource RoundedButtonStyle}"
                Content="Aktualizuj" 
                Grid.Row="5" 
                Grid.Column="1" 
                HorizontalAlignment="Center"
                Margin="0 4 0 0"
                IsEnabled="False"
                Click="btn2_Click">
            <Button.Effect>
                <DropShadowEffect
                     ShadowDepth="4"
                     Direction="330"
                     Color="Black"
                     Opacity="0.2"
                     BlurRadius="4"/>
            </Button.Effect>
            <Button.ToolTip>
                <StackPanel>
                    <TextBlock FontWeight="Bold" Text="Naciśnij przycisk aby zaktualizować rekord" Foreground="Black"/>
                    <TextBlock Text="Aktualizacja danych w bazie" Foreground="Black"/>
                </StackPanel>
            </Button.ToolTip>
        </Button>
    </Grid>
</Page>
