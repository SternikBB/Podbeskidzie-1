<Page x:Class="Podbeskidzie.ShowTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Podbeskidzie"
      mc:Ignorable="d" 
      d:DesignHeight="325" d:DesignWidth="525"
      Title="Table1"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style TargetType="{x:Type DataGridCell}">
            <Style.Triggers>
                <Trigger Property="DataGridCell.IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFF99A58" />
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="BorderBrush" Value="Black" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid>
        <DataGrid x:Name="DataGr" 
                  RowBackground="White" 
                  IsReadOnly="True" >
            <DataGrid.Background>
                <SolidColorBrush Color="White" Opacity="0.6"></SolidColorBrush>
            </DataGrid.Background>
        </DataGrid>
    </Grid>
</Page>
